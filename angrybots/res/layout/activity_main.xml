<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundimage"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="228dp"
        android:layout_y="196dp"
        android:background="@drawable/profilebuttonpress"
        android:gravity="center_horizontal"
        android:onClick="angrybotsProfile" />

    <Button
        android:id="@+id/map"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="154dp"
        android:layout_y="305dp"
        android:background="@drawable/mapbuttonpress"
        android:onClick="map" />

    <Button
        android:id="@+id/leaderboard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="300dp"
        android:layout_y="305dp"
        android:background="@drawable/leaderboardbuttonpress"
        android:onClick="leaderboard" />

    <Button
        android:id="@+id/ranking"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="228dp"
        android:layout_y="417dp"
        android:background="@drawable/achievementsbuttonpress"
        android:onClick="achievements" />

    <Button
        android:id="@+id/settings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="298dp"
        android:layout_y="529dp"
        android:background="@drawable/settingsbuttonpress"
        android:onClick="settings" />

    <Button
        android:id="@+id/server"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="153dp"
        android:layout_y="528dp"
        android:background="@drawable/serverbuttonpress"
        android:onClick="server" />

    <ImageView
        android:layout_width="409dp"
        android:layout_height="136dp"
        android:layout_x="90dp"
        android:layout_y="18dp"
        android:background="@drawable/title" />

    <Button
        android:id="@+id/minigame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="223dp"
        android:layout_y="644dp"
        android:background="@drawable/minigamebuttonpress"
        android:onClick="minigame" />

</AbsoluteLayout>